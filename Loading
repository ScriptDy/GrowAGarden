local Players = game:GetService("Players")
local TweenService = game:GetService("TweenService")

-- Create ScreenGui
local screenGui = Instance.new("ScreenGui")
screenGui.Name = "LoadingScreen"
screenGui.Parent = Players.LocalPlayer:WaitForChild("PlayerGui")
screenGui.ResetOnSpawn = false

-- Create Frame for background
local frame = Instance.new("Frame")
frame.Size = UDim2.new(1, 0, 1, 0)
frame.BackgroundColor3 = Color3.fromRGB(0, 0, 0)
frame.BackgroundTransparency = 0.3
frame.Parent = screenGui

-- Create TextLabel for loading text
local textLabel = Instance.new("TextLabel")
textLabel.Size = UDim2.new(0.5, 0, 0.2, 0)
textLabel.Position = UDim2.new(0.25, 0, 0.4, 0)
textLabel.BackgroundTransparency = 1
textLabel.Text = "Loading..."
textLabel.TextColor3 = Color3.fromRGB(255, 255, 255)
textLabel.TextScaled = true
textLabel.Font = Enum.Font.SourceSansBold
textLabel.Parent = frame

-- Optional: Create a simple spinning loader
local spinner = Instance.new("ImageLabel")
spinner.Size = UDim2.new(0.1, 0, 0.1, 0)
spinner.Position = UDim2.new(0.45, 0, 0.6, 0)
spinner.BackgroundTransparency = 1
spinner.Image = "rbxassetid://1234567890" -- Replace with a spinner image asset ID
spinner.Parent = frame

-- Tween for spinner rotation
local tweenInfo = TweenInfo.new(2, Enum.EasingStyle.Linear, Enum.EasingDirection.InOut, -1)
local tween = TweenService:Create(spinner, tweenInfo, {Rotation = 360})
tween:Play()

-- Fade out function
local function fadeOut()
	local fadeInfo = TweenInfo.new(1, Enum.EasingStyle.Sine, Enum.EasingDirection.In)
	local fadeTween = TweenService:Create(frame, fadeInfo, {BackgroundTransparency = 1})
	fadeTween:Play()
	for _, child in pairs(frame:GetChildren()) do
		if child:IsA("GuiObject") then
			TweenService:Create(child, fadeInfo, {BackgroundTransparency = 1, TextTransparency = 1, ImageTransparency = 1}):Play()
		end
	end
	wait(1)
	screenGui:Destroy()
end

-- Show loading screen for 3 seconds, then fade out
wait(3)
fadeOut()
