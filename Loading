local player = game.Players.LocalPlayer
local playerGui = player:WaitForChild("PlayerGui")
local TweenService = game:GetService("TweenService")
local Lighting = game:GetService("Lighting")

-- Add Blur Effect
local blur = Instance.new("BlurEffect")
blur.Size = 12
blur.Parent = Lighting

-- Create ScreenGui
local gui = Instance.new("ScreenGui", playerGui)
gui.Name = "KuniLoading"
gui.ResetOnSpawn = false
gui.IgnoreGuiInset = true

-- Main Panel (Full Screen)
local frame = Instance.new("Frame", gui)
frame.Size = UDim2.new(1, 0, 1, 0) -- Full screen
frame.Position = UDim2.new(0, 0, 0, 0) -- Top-left corner
frame.BackgroundColor3 = Color3.fromRGB(0, 0, 0) -- Solid black
frame.BackgroundTransparency = 0
frame.BorderSizePixel = 0
frame.ZIndex = 1

Instance.new("UICorner", frame).CornerRadius = UDim.new(0, 0) -- Remove corner radius for full screen
Instance.new("UIStroke", frame).ApplyStrokeMode = Enum.ApplyStrokeMode.Border

-- Shadow (Adjusted for full screen)
local shadow = Instance.new("ImageLabel", frame)
shadow.Image = "rbxassetid://1316045217"
shadow.ImageTransparency = 0.75
shadow.Size = UDim2.new(1, 0, 1, 0) -- Full screen shadow
shadow.Position = UDim2.new(0, 0, 0, 0)
shadow.BackgroundTransparency = 1
shadow.ZIndex = 0

-- Glowing Title (Centered)
local title = Instance.new("TextLabel", frame)
title.Size = UDim2.new(0.8, 0, 0, 100) -- Adjusted for larger screen
title.Position = UDim2.new(0.1, 0, 0.3, -50) -- Centered vertically, slightly higher
title.Text = "Yawi Hub X"
title.TextColor3 = Color3.fromRGB(0, 200, 255)
title.TextTransparency = 0.2
title.TextStrokeTransparency = 0.6
title.Font = Enum.Font.FredokaOne
title.TextScaled = true
title.BackgroundTransparency = 1
title.ZIndex = 2

-- Title Pulse
task.spawn(function()
	while title and title.Parent do
		TweenService:Create(title, TweenInfo.new(1), {TextTransparency = 0.05}):Play()
		task.wait(1)
		TweenService:Create(title, TweenInfo.new(1), {TextTransparency = 0.25}):Play()
		task.wait(1)
	end
end)

-- Loading Dots Animation (Centered below title)
local loading = Instance.new("TextLabel", frame)
loading.Size = UDim2.new(0.8, 0, 0, 50) -- Adjusted for larger screen
loading.Position = UDim2.new(0.1, 0, 0.5, -25) -- Below title
loading.Text = "Loading"
loading.TextColor3 = Color3.fromRGB(200, 200, 200)
loading.Font = Enum.Font.FredokaOne
loading.TextScaled = true
loading.BackgroundTransparency = 1
loading.TextStrokeTransparency = 1
loading.ZIndex = 2

-- Dots Cycle
task.spawn(function()
	local dots = {"", ".", "..", "..."}
	local index = 1
	while loading and loading.Parent do
		loading.Text = "Loading" .. dots[index]
		index = (index % #dots) + 1
		task.wait(0.4)
	end
end)

-- Loading Bar BG (Centered at bottom)
local barBg = Instance.new("Frame", frame)
barBg.Size = UDim2.new(0.8, 0, 0, 30) -- Wider for full screen
barBg.Position = UDim2.new(0.1, 0, 0.7, -15) -- Near bottom
barBg.BackgroundColor3 = Color3.fromRGB(35
